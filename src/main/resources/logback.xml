<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoder默認配置為PartternLayoutEncoder -->
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="DETAILLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover -->
			<FileNamePattern>/opt/jboss/deploy/batch/detailLog/LOG/detailLog.%d{yyyyMMdd}</FileNamePattern>
			<!-- keep 30 days' worth of history -->
			<maxHistory>365</maxHistory>
		</rollingPolicy>
		<encoder charset="UTF-8">
			<Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg%n</Pattern>
		</encoder>
	</appender>
	
	<appender name="CONSOLE_BAR" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoder默認配置為PartternLayoutEncoder -->
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%msg</pattern>
		</encoder>
	</appender>
	
	<logger name="consoleBar" additivity="false" level="INFO">
        <appender-ref ref="CONSOLE_BAR"/>
    </logger>
    
    <root level="info">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="DETAILLOG"/>
	</root>
</configuration>